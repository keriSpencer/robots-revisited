<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Info</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body class="robotdetails">
    <div class="nameInfo">
      <div class="topRow">
        <figure>
          {{#robots}}
          <img class="infoImage" src="{{ avatar }}" alt="avatar">
        </figure>
        <h1>{{ name }}</h1>
        <span>
          {{#city}}
          {{city}},
          {{/city}}
          {{ state }} |
          {{#job}}
          {{ job }},
          {{/job}}
          {{^job}}
            <span id="available">Available for hire</span>
          {{/job}}
          {{ company }}
        </span>
        <p>{{ email }}</p>
      </div>
    </div>
    <div class="eduSkills">
      <dl class="bottomRow">
        {{#university}}
        <dt id="edu">Education </dt>
        <dd id="dd">{{university}}</dd>
        {{/university}}
      {{/robots}}
      </dl>
    </div>
  </body>
</html>
